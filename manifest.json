{
  "manifest_version": 3,
  "name": "Trigger Warnings",
  "description": "Community-sourced trigger warnings for streaming platforms",
  "version": "2.0.0",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "*://*.netflix.com/*",
    "*://*.primevideo.com/*",
    "*://*.amazon.com/*",
    "*://*.hulu.com/*",
    "*://*.disneyplus.com/*",
    "*://*.max.com/*",
    "*://*.peacocktv.com/*",
    "*://*.youtube.com/*",
    "*://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/watch/*"
      ],
      "js": ["content/index.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.primevideo.com/detail/*",
        "*://*.amazon.com/gp/video/*"
      ],
      "js": ["content/index.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.hulu.com/watch/*"
      ],
      "js": ["content/index.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.disneyplus.com/video/*"
      ],
      "js": ["content/index.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.max.com/video/watch/*"
      ],
      "js": ["content/index.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.peacocktv.com/watch/*"
      ],
      "js": ["content/index.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.youtube.com/watch*"
      ],
      "js": ["content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Trigger Warnings"
  },
  "options_page": "options/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "audio/*"
      ],
      "matches": [
        "*://*.netflix.com/*",
        "*://*.primevideo.com/*",
        "*://*.amazon.com/*",
        "*://*.hulu.com/*",
        "*://*.disneyplus.com/*",
        "*://*.max.com/*",
        "*://*.peacocktv.com/*",
        "*://*.youtube.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.supabase.co https://*.supabase.io"
  }
}
