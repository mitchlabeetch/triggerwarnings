{
  "name": "trigger-warnings-extension",
  "version": "2.0.0",
  "description": "Modern trigger warning extension for streaming platforms",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:chrome": "TARGET_BROWSER=chrome vite",
    "dev:firefox": "TARGET_BROWSER=firefox vite",
    "build": "vite build",
    "build:chrome": "TARGET_BROWSER=chrome npm run build",
    "build:firefox": "TARGET_BROWSER=firefox npm run build",
    "build:safari": "TARGET_BROWSER=safari npm run build",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:safari",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.svelte",
    "format": "prettier --write \"src/**/*.{ts,svelte,css,json}\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@tsconfig/svelte": "^5.0.2",
    "@types/chrome": "^0.0.256",
    "@types/node": "^20.10.6",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jsdom": "^24.0.0",
    "patch-package": "^8.0.1",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.19",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-web-extension": "^4.1.3",
    "vitest": "^1.2.1",
    "web-ext": "^7.11.0",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "@xenova/transformers": "^2.17.2"
  },
  "license": "MIT",
  "author": "MitchB",
  "keywords": [
    "chrome-extension",
    "firefox-extension",
    "streaming",
    "trigger-warning",
    "content-warnings",
    "accessibility"
  ]
}
